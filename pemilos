    <script>
        document.getElementById('voteForm').addEventListener('submit', function(event) {
            event.preventDefault();

            let name = document.getElementById('name').value;
            let candidate = document.getElementById('candidate').value;

            if (name && candidate) {
                let resultsData = document.getElementById('resultsData');
                resultsData.innerHTML = `<p>Terima kasih, ${name}! Suara Anda untuk ${candidate} telah diterima.</p>`;
                
                // Simulasi data hasil
                setTimeout(() => {
                    let resultText = `<p>Hasil Pemilihan: </p><ul>
                        <li>Kandidat 1: 20 suara</li>
                        <li>Kandidat 2: 15 suara</li>
                        <li>Kandidat 3: 10 suara</li>
                    </ul>`;
                    resultsData.innerHTML = resultText;
                }, 2000);
            } else {
                alert('Mohon isi semua field!');
            }
        });
    </script>
